{
  "name": "button-component",
  "version": "0.0.0",
  "author": "Brando Vidal",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "devchallengues",
    "button component",
    "button"
  ],
  "private": false,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "ts-standard",
    "lint-fix": "ts-standard --fix",
    "clean": "rimraf node_modules/ dist/",
    "lint-staged": "npx lint-staged",
    "prepare": "husky install",
    "test": "vitest",
    "test-ui": "vitest --ui",
    "test-ct": "playwright test -c playwright.config.ts"
  },
  "dependencies": {
    "classnames": "2.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.24.0",
    "@playwright/test": "^1.24.0",
    "@types/node": "18.0.5",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@vitejs/plugin-react": "2.0.0",
    "@vitest/ui": "0.19.0",
    "husky": "8.0.1",
    "jsdom": "20.0.0",
    "lint-staged": "13.0.3",
    "playwright": "1.24.0",
    "rimraf": "3.0.2",
    "ts-standard": "11.0.0",
    "typescript": "4.7.4",
    "vite": "3.0.0",
    "vitest": "0.19.0"
  },
  "ts-standard": {
    "project": "./tsconfig.json",
    "ignore": [
      "dist/",
      "node_modules/",
      "src/**/*.js",
      "src/**/*.d.ts",
      "**/*.config.ts"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint-fix"
    ]
  }
}
